<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="chat_bubble"
                android:fillAlpha="0"
                android:fillColor="#f9aa33"
                android:pathData="M 20 2 L 4 2 C 2.9 2 2 2.9 2 4 L 2 22 L 6 18 L 20 18 C 21.1 18 22 17.1 22 16 L 22 4 C 22 2.9 21.1 2 20 2 Z"
                android:strokeWidth="0"
                android:strokeAlpha="0" />
            <group android:name="translate_chat_stroke_1">
                <path
                    android:name="chat_stroke_1"
                    android:fillAlpha="0"
                    android:fillColor="#232f34"
                    android:pathData="M 0 6 L 12 6 L 12 8 L 0 8 L 0 6 Z"
                    android:strokeWidth="1"
                    android:strokeAlpha="0" />
            </group>
            <group android:name="translate_chat_stroke_2">
                <path
                    android:name="chat_stroke_2"
                    android:fillAlpha="0"
                    android:fillColor="#232f34"
                    android:pathData="M 0 9 L 12 9 L 12 11 L 0 11 L 0 9 Z"
                    android:strokeAlpha="0" />
            </group>
            <group android:name="translate_chat_stroke_3">
                <path
                    android:name="chat_stroke_3"
                    android:fillAlpha="0"
                    android:fillColor="#232f34"
                    android:pathData="M 0 12 L 8 12 L 8 14 L 0 14 L 0 12 Z" />
            </group>
        </vector>
    </aapt:attr>
    <target android:name="chat_bubble">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="550"
                    android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                    android:propertyName="fillAlpha"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
    <target android:name="translate_chat_stroke_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="400"
                android:interpolator="@android:anim/anticipate_overshoot_interpolator"
                android:propertyName="translateX"
                android:startOffset="300"
                android:valueFrom="0"
                android:valueTo="6"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
    <target android:name="translate_chat_stroke_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="400"
                android:interpolator="@android:anim/anticipate_overshoot_interpolator"
                android:propertyName="translateX"
                android:startOffset="650"
                android:valueFrom="0"
                android:valueTo="6"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
    <target android:name="translate_chat_stroke_3">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="400"
                android:interpolator="@android:anim/anticipate_overshoot_interpolator"
                android:propertyName="translateX"
                android:startOffset="1000"
                android:valueFrom="0"
                android:valueTo="6"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
    <target android:name="chat_stroke_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:propertyName="fillAlpha"
                android:startOffset="200"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
    <target android:name="chat_stroke_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:propertyName="fillAlpha"
                android:startOffset="550"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
    <target android:name="chat_stroke_3">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:interpolator="@android:interpolator/fast_out_slow_in"
                android:propertyName="fillAlpha"
                android:startOffset="900"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType" />
        </aapt:attr>
    </target>
</animated-vector>
